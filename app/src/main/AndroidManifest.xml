<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cl.apd.ditapp">

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name="cl.apd.ditapp.ui.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="gcm.play.android.samples.com.gcmquickstart" />
            </intent-filter>
        </receiver>

        <service
            android:name="cl.apd.ditapp.network.gcm.SeguriappGcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name="cl.apd.ditapp.network.gcm.SeguriappInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name="cl.apd.ditapp.network.gcm.RegistrationIntentService"
            android:exported="false" />

        <activity
            android:name="cl.apd.ditapp.ui.main.LoginActivity"
            android:label="@string/login_title" />
        <activity
            android:name="cl.apd.ditapp.ui.transaction.TransactionActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="cl.apd.ditapp.ui.route_planning.RoutePlanningActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="cl.apd.ditapp.ui.info_sucursal.InfoSucursalActivity"
            android:label="@string/app_name"/>

        <activity android:name=".ui.create_user.CreateUserActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"/>


    </application>

</manifest>
